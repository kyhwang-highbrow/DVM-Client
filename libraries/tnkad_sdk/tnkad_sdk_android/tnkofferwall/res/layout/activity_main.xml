<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff808080"
    >
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
	<TextView  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="current points : "
	    />
	<TextView
		android:id="@+id/main_point"
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="loading..."
	    />
  </LinearLayout>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
	    <Button 
			android:id="@+id/main_ad"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List (activity)"
			/>	
		<Button 
			android:id="@+id/main_ad_popup"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List (popup)"
			/>
		<Button 
			android:id="@+id/main_fad"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Interstitial Ad"
			/>
	</LinearLayout>
	<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
	    <Button 
			android:id="@+id/main_ad_style"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkStyle (activity)"
			/>	
		<Button 
			android:id="@+id/main_ad_style_popup"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkStyle (popup)"
			/>
		<Button 
			android:id="@+id/main_ad_style_embed"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkStyle (embed)"
			/>
	</LinearLayout>
	<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
	    <Button 
			android:id="@+id/main_ad_custom"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkLayout (activity)"
			/>	
		<Button 
			android:id="@+id/main_ad_custom_popup"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkLayout (popup)"
			/>
		<Button 
			android:id="@+id/main_ad_custom_embed"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PPI Ad List TnkLayout (embed)"
			/>
	</LinearLayout>
	
	<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
	    <Button 
			android:id="@+id/main_item"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Buy Item"
			/>
		<Button 
			android:id="@+id/main_cpc_fad"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="show CPC Interstitial Ad"
			/>		
		<Button 
			android:id="@+id/main_cpc_ad"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Show CPC Ad List"
			/>
	</LinearLayout>	
	<Button 
		android:id="@+id/main_native_ad"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Native Ad"
		/>
	<FrameLayout
	    android:id="@+id/native_ad_container"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
			
	    >
		    
	</FrameLayout>
</LinearLayout>
