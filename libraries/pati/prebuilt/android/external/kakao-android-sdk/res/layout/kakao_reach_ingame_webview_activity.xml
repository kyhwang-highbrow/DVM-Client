<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/kakao_reach_ingame_navigation_bar">

        <com.kakao.reach.ingame.ui.component.CommonWebView
            android:id="@+id/kakao_reach_ingame_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/kakao_reach_ingame_progreesbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateOnly="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/kakao_reach_ingame_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kakao_reach_ingame_navigation_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/kakao_reach_ingame_home"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin1_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_home" />

        <Button
            android:id="@+id/kakao_reach_ingame_back"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin2_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_back" />

        <Button
            android:id="@+id/kakao_reach_ingame_forward"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin2_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_forward" />

        <Button
            android:id="@+id/kakao_reach_ingame_refresh"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin2_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_refresh" />

        <Button
            android:id="@+id/kakao_reach_ingame_top"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin2_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_top" />

        <Button
            android:id="@+id/kakao_reach_ingame_close"
            android:layout_width="@dimen/kakao_reach_ingame_navigation_bar_button_width_portrait"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/kakao_reach_ingame_navigation_bar_button_margin2_portrait"
            android:layout_marginRight="@dimen/kakao_reach_ingame_navigation_bar_button_margin1_portrait"
            android:layout_weight="1"
            android:background="@drawable/kakao_reach_button_close" />
    </LinearLayout>
</RelativeLayout>