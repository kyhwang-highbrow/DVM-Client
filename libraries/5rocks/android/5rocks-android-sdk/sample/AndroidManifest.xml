<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="io.fiverocks.android.sample"
  android:versionCode="1"
  android:versionName="1.0">

  <uses-sdk android:minSdkVersion="8"/>

  <!-- [5Rocks] Required permission to communicate with the 5Rocks server. -->
  <uses-permission android:name="android.permission.INTERNET"/>

  <!-- [5Rocks] Recommended permissions to resolve the user environment and network status. -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

  <!-- [5Rocks] Required permissions to receive GCM messages. -->
  <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

  <!-- [5Rocks] Required permissions to prevent other applications from receiving your GCM messages. -->
  <permission
    android:name="io.fiverocks.android.sample.permission.C2D_MESSAGE"
    android:protectionLevel="signature"/>
  <uses-permission android:name="io.fiverocks.android.sample.permission.C2D_MESSAGE"/>

  <application
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <!-- [5Rocks] Optional meta-data to set the name of the app store which the app will be installed from.
                  i.e. "Google", "Amazon" -->
    <!--
    <meta-data android:name="io.fiverocks.android.appstore" android:value="Google"/>
    -->

    <!-- [5Rocks] Receiver to track a referrer of the install via the Google Play Store. -->
    <receiver
      android:name="io.fiverocks.android.InstallReferrerReceiver"
      android:exported="true">
      <intent-filter>
        <action android:name="com.android.vending.INSTALL_REFERRER"/>
      </intent-filter>
    </receiver>

    <!-- [5Rocks] Receiver to receive GCM messages. -->
    <receiver
      android:name="io.fiverocks.android.GCMReceiver"
      android:permission="com.google.android.c2dm.permission.SEND">
      <intent-filter>
        <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
        <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
        <action android:name="com.google.android.gcm.intent.RETRY"/>
        <category android:name="io.fiverocks.android.sample"/>
      </intent-filter>
    </receiver>

    <!-- [5Rocks] Receiver to receive the internal messages of 5Rocks. -->
    <receiver android:name="io.fiverocks.android.FiveRocksReceiver"/>

    <activity
      android:name="io.fiverocks.android.sample.SampleActivity"
      android:label="@string/app_name"
      android:configChanges="orientation">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

  </application>

</manifest>
