# Uncomment this line to define a global platform for your project
platform :ios, '9.0'

target 'DragonVillageM iOS' do
    # Uncomment this line if you're using Swift or would like to use dynamic frameworks
    # use_frameworks!

    # Pods for DragonVillageM iOS
    
    # Pods for Firebase
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Messaging'

    # Pods for Crashlytics
    pod 'Fabric'
    pod 'Crashlytics'

    ## SOCIAL
    # Pods for Google
    pod 'GoogleSignIn'
    # Pods for Facebook
    pod 'FBSDKCoreKit'
    pod 'FBSDKShareKit'
    pod 'FBSDKLoginKit'
    # Pods for Twitter
    pod 'TwitterKit'

    ## ADS
    # Pods for AdMob
    pod 'Google-Mobile-Ads-SDK'
    pod 'GoogleMobileAdsMediationUnity'
    pod 'GoogleMobileAdsMediationAdColony'
    # Pods for UnityAds
    pod 'UnityAds'
    # Pods for AdColony
    pod 'AdColony'

    ## STATISTIC
    # Pods for IGAWorks
    pod 'IgaworksCore'
    pod 'AdBrix'
    # Pods for Tapjoy
    pod 'TapjoySDK'
    # Pods for Adjust
    pod 'Adjust'
end

target 'DragonVillageM Mac' do
    # Uncomment this line if you're using Swift or would like to use dynamic frameworks
    # use_frameworks!

    # Pods for DragonVillageM Mac
end
